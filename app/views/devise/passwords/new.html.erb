
<style>
.divider:after,
.divider:before {
content: "";
flex: 1;
height: 1px;
background: #eee;
}
</style>

    <section class="vh-100">
      <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
        <h2 class="text-center">Welcome to Quiz Creation</h2>
          <div class="col-md-8 col-lg-7 col-xl-6">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
              class="img-fluid" alt="Phone image">
          </div>
          <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
          <h4 class="text-center">Forgot your password?</h4><br>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <!-- Email input -->
              <div class="form-outline mb-4">
                <%= f.email_field :email, autofocus: true, autocomplete: "email",:class=>"form-control form-control-lg" %>
                <label class="form-label" for="form1Example13">Email address</label>
              </div>
    

              <!-- Submit button -->
              <div class="row">
              <%= f.submit "Send me reset password instructions" ,:class=>"btn btn-danger btn-lg w-100" %>
              </div><br>
              <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
          </div>
              <div class="row d-flex"> 
              <div class="col"> 
              <%= link_to "Log in", new_session_path(resource_name),:class=>"btn btn-primary btn-lg w-100"  %>
              </div>
              <div class="col">
              <%= link_to "Sign up", new_registration_path(resource_name),:class=>"btn btn-secondary btn-lg w-100" %>
              </div>
              </div>  <br>
              
            <% end %>
          </div>
        </div>
      </div>
    </section>




